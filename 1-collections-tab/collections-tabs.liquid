<!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.collection-tabs-section').forEach(function (section) {
                const buttons = section.querySelectorAll('.tab-button');
                const contents = section.querySelectorAll('.tab-content');
                const arrowsWrapper = section.querySelector('.collection-arrows');
                const nextBtn = arrowsWrapper ? arrowsWrapper.querySelector('.swiper-button-next') : null;
                const prevBtn = arrowsWrapper ? arrowsWrapper.querySelector('.swiper-button-prev') : null;

                section._activeSwiper = null;

                function activateTab(btn) {
                    buttons.forEach(b => b.classList.remove('active'));
                    contents.forEach(c => c.classList.remove('active'));

                    btn.classList.add('active');
                    const tabId = btn.dataset.tab;
                    const tabEl = section.querySelector('#' + tabId);
                    if (tabEl) tabEl.classList.add('active');

                    if (section._activeSwiper) {
                        try { section._activeSwiper.destroy(true, true); } catch (e) { }
                        section._activeSwiper = null;
                    }

                    const swiperEl = tabEl.querySelector('.mySwiper');
                    if (swiperEl && nextBtn && prevBtn) {
                        section._activeSwiper = new Swiper(swiperEl, {
                            slidesPerView: 'auto',
                            spaceBetween: 10,
                            navigation: {
                                nextEl: nextBtn,
                                prevEl: prevBtn,
                            },
                            breakpoints: {
                                990: { spaceBetween: 20 },
                            },
                            observer: true,
                            observeParents: true,
                        });

                        section._activeSwiper.navigation.update();
                    }
                }

                buttons.forEach(btn => btn.addEventListener('click', () => activateTab(btn)));

                const initialBtn = section.querySelector('.tab-button.active') || buttons[0];
                if (initialBtn) activateTab(initialBtn);
            });
        });
    </script>

